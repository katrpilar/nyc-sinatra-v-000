<form action="/figures" method="POST">
  <label for="figure_name">Name</label>
  <input type="text" name="figure[name]" id="figure_name">

  <h3>Select Existing Titles</h3>
  <% Title.all.each do |title| %>
    <%=title.name%>
    <input type="checkbox" name="figure[title_ids][]" id="title_<%=title.id%>" value="<%=title.id%>">
  <% end %>

  <label for="title_names">Create New Title</label>
  <input type="text" name="title[name]" id="title_names">

  <h3>Select Existing Landmarks</h3>
  <% Landmark.all.each do |landmark| %>
    <%= landmark.name %>
    <input type="checkbox" name="figure[landmark_ids][]" id="landmark_<%=landmark.id%>">
  <% end %>

  <label for="landmark_name">Create New Landmark</label>
  <input type="text" name="landmark[name]" id="landmark_name">

  <input type="submit" name="Create New Figure" value="Create New Figure">
</form>
