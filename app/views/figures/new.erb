<form action="/figures" method="POST">
  <label for="figure_name">Name</label>
  <input type="text" name="figure[name]" id="figure_name">

  <h3>Select Existing Title</h3>
  <% Title.all.each do |title| %>
    <%=title.name%>
    <input type="checkbox" name="figure[title_ids][]" id="title_<%=title.id%>" value="<%=title.id%>">
  <% end %>

  <label for="title_names">Create New Title</label>
  <input type="text" name="title[name]" id="title_names">

  <label for="landmark_names">Landmarks</label>
  <input type="text" name="figure[landmark_ids][]" id="landmark_names">
  <input type="text" name="landmark[name]">

  <input type="submit" name="Create New Figure" value="Create New Figure">
</form>
